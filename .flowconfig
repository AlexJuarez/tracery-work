[ignore]
<PROJECT_ROOT>/[^/]*$
<PROJECT_ROOT>/node_modules/fbjs/.*
<PROJECT_ROOT>/src/test/js/.*

[include]
node_modules/
src/main/js

[libs]
src/main/flow

[options]
module.name_mapper='^\(.*\)\.css$' -> '<PROJECT_ROOT>/CSSModule.js.flow'
module.name_mapper='^\(.*\)\.less$' -> '<PROJECT_ROOT>/CSSModule.js.flow'
suppress_comment= \\(.\\|\n\\)*\\$FlowFixMe
suppress_comment= \\(.\\|\n\\)*\\$FlowIssue

[version]
# Don't upgrade to 0.29.0; it breaks the module.name_mapper line above 
0.28.0
